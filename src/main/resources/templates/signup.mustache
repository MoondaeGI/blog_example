{{>layout/header}}
<h2>회원 가입</h2>
<div>
    <div class="from-group">
        <label for="email">이메일</label>
        <input type="text" class="from-control" id="email" placeholder="이메일">
        <button type="button" class="btn btn-secondary" id="email-check">이메일 중복 확인</button>
    </div>
    <div class="from-group">
        <label for="password">비밀번호</label>
        <input type="text" class="from-control" id="password" placeholder="비밀번호">
    </div>
    <div class="from-group">
        <label for="name">이름</label>
        <input type="text" class="from-control" id="name" placeholder="이름">
        <button type="button" class="btn btn-secondary" id="name-check">이름 중복 확인</button>
    </div>
    <div class="from-group">
        <label for="blog-name">블로그 이름</label>
        <input type="text" class="from-control" id="blog-name" placeholder="블로그 이름">
        <button type="button" class="btn btn-secondary" id="blog-name-check">블로그 이름 중복 확인</button>
    </div>
    <a href="/setup" role="button" class="btn btn-primary" id="signup">회원 가입</a>
</div>
<div class="form-group">
    <a href="/">메인으로 가기</a>
</div>
{{>layout/footer}}