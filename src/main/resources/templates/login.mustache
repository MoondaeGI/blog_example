{{>layout/header}}
<h2>로그인 페이지</h2>
<div>
    <form action="/login" method="post">
        <div class="from-group">
            <label for="email" class="form-label">이메일</label>
            <input type="text" class="from-control" name="username" id="username" placeholder="이메일">
        </div>
        <div class="from-group">
            <label for="password" class="form-label">비밀번호</label>
            <input type="text" class="from-control" name="password" id="password" placeholder="비밀번호">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">로그인</button>
            <a href="/signup" role="button" class="btn btn-secondary" id="signup">회원 가입</a>
        </div>
    </form>
</div>
<div class="form-group">
    <a href="/">메인으로 가기</a>
</div>
{{>layout/footer}}