{{>layout/header}}
<div class="row">
    {{#user}}
        <span id="user">{{name}}</span>
        <a href="/logout" class="btn btn-info active" role="button">로그 아웃</a>
    {{/user}}
    {{^user}}
        <a href="/login" class="btn btn-login" role="button">로그인</a>
        <a href="/signup" class="btn btn-signup" role="button">회원 가입</a>
    {{/user}}
</div>
<div class="form-group">
    <label for="name">이름 변경하기</label>
    <input type="text" class="form-control" id="name" value={{blogger.name}}>
</div>
<div class="form-group">
    <label for="blog-name">블로그 이름 변경하기</label>
    <input type="text" class="form-control" id="blog-name" value={{blogger.blogName}}>
</div>
<div class="form-group">
    <label for="category">카테고리 수정</label>
    <ul id="upper-category-list">
        {{#categories}}
            <li>
                <div class="form-group">
                    <input type="text" class="form-control" id="upper-category-{{upperCategoryNo}}" value={{name}}>
                    <div class="form-group">
                        <button type="button" class="btn btn-primary" id="upper-update" onclick="categoryUpdate('upper-category', {{upperCategoryNo}})">수정</button>
                        <button type="button" class="btn btn-secondary" id="upper-delete" onclick="categoryDelete('upper-category', {{upperCategoryNo}})">삭제</button>
                    </div>
                </div>
                <ul id="lower-category-list-{{upperCategoryNo}}">
                    {{#lowerCategoryVOList}}
                        <li>
                            <div class="form-group">
                                <input type="text" class="form-control" id="lower-category-{{lowerCategoryNo}}" value={{name}}>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="lower-update" onclick="categoryUpdate('lower-category', {{lowerCategoryNo}})">수정</button>
                                    <button type="button" class="btn btn-secondary" id="lower-delete" onclick="categoryDelete('lower-category', {{lowerCategoryNo}})">삭제</button>
                                </div>
                            </div>
                        </li>
                    {{/lowerCategoryVOList}}
                </ul>
                <ul>
                    <div id="upper-category-save" class="form-group">
                        <button type="button" class="btn btn-primary" id="add-upper-category" onclick="categorySave('lower-category')">카테고리 추가</button>
                    </div>
                </ul>
        {{/categories}}
    </ul>
    <ul>
        <button type="button" class="btn btn-primary" id="add-lower-category" onclick="categorySave('upper-category')">카테고리 추가</button>
    </ul>
</div>
<div class="form-group">
    <button type="button" class="btn btn-primary" id="update" onclick="userUpdate()">변경 완료</button>
    <button type="button" class="btn btn-secondary" id="cancel" onclick="updateCansel()">취소</button>
</div>
<script src="/js/app/blogUpdate.js"></script>
{{>layout/footer}}